Categories:

1) findCategoryById:
Url: http://localhost:8080/categories/1

Response:

{
    "status": 200,
    "message": "Category created successful",
    "data": {
        "id": 6,
        "title": "Hotel",
        "description": "Un hostel es un tipo de alojamiento económico en el que poder compartir experiencias sociales.",
        "imageUrl": "https://unsplash.com/it/foto/WQJvWU_HZFo"
    }
}

